apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: {{ name }}{{ deployment_suffix }}
  labels:
    app: {{ name }}{{ deployment_suffix }}
spec:
  replicas: 1
  template:
    metadata:
      name: {{ name }}{{ deployment_suffix }}
      labels:
        app: {{ name }}{{ deployment_suffix }}
    spec:
      containers:
      - name: database
        image: postgres
        ports:
        - containerPort: {{ exposed_port }}
        env:
        - name: POD_NAME
          valueFrom:
            fieldRef:
              fieldPath: metadata.name
      - name: seeder
        image: postgres
        command: ["/bin/bash"]
        args: [ {{ ",".join(argument_sets['deployment']) }} ]
        env:
        - name: POD_NAME
          valueFrom:
            fieldRef:
              fieldPath: metadata.name