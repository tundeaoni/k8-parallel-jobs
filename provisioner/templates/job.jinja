apiVersion: batch/v1
kind: Job
metadata:
  name: {{ name }}{{ job_suffix}}
  labels:
    group_id: {{ name }}
spec:
  template:
    metadata:
      name: {{ name }}{{ job_suffix }}
    spec:
      containers:
      - name: processor
        image: postgres
        env:
          - name: SERVICE_URL
            value: {{ name }}{{ service_suffix }}
          - name: SERVICE_EXPOSED_PORT
            value: "{{ exposed_port }}"
          - name: GARBAGE_COLLECTOR_URL
            value: {{ garbage_collector }}
        command: ["/bin/bash"]
        args: [ {{ ",".join(argument_sets['job']) }} ]
      restartPolicy: Never